@page
@model DiamondDrillingReport.Pages.Areas.DetailsModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div>
    <div class="col-sm-9">
        <div>
            <h4>@Localizer["Area"]</h4>
            <hr/>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Area.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Area.Name)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Area.ID">@Localizer["Edit"]</a>
        </div>
    </div>
    <div class="col-sm-3">
        <a asp-page="/Index"><button type="button" class="btn btn-block">@Localizer["BACK TO HOME"]</button></a><br/>
        <select id="dynamic_select" class="form-control">
            <option value="">@Localizer["Language"]</option>
            <option value="?culture=en">English</option>
            <option value="?culture=ru">Russian</option>
        </select>
    </div>
</div>

@section Scripts {
    <script>
        $("#dynamic_select").on('change', function () {
            var apiUrl = document.URL;
            var url = apiUrl + $(this).val(); // get selected value
            if (url) { // require a URL
                window.location = url; // redirect
            }
            return false;
        });
    </script>
}

