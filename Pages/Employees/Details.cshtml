@page
@model DiamondDrillingReport.Pages.Employees.DetailsModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div>
    <h4>@Localizer["Employee"] </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Employee.Name)
        </dt>
        <dd id="DetailsName">
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Employee.Surname)
        </dt>
        <dd id="DetailsSurname">
            @Html.DisplayFor(model => model.Employee.Surname)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Employee.Short)
        </dt>
        <dd id="DetailsFullname">
            @Html.DisplayFor(model => model.Employee.Short)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Employee.NameRus)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Employee.NameRus)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Employee.Position)
        </dt>
        <dd id="DetailsPosition">
            @Html.DisplayFor(model => model.Employee.Position)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee.ID">@Localizer["Edit"]</a> |
    <a asp-page="./Index">@Localizer["Back to List"]</a>
</div>
