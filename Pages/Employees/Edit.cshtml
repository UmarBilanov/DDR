@page
@model DiamondDrillingReport.Pages.Employees.EditModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<hr />
<div class="row">
    <div class="col-sm-9">
        <h4>@Localizer["Employee"] </h4>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.ID" />
            <div class="form-group">
                <label asp-for="Employee.EmployeeCode" class="control-label"></label>
                <input asp-for="Employee.EmployeeCode" class="form-control" />
                <span asp-validation-for="Employee.EmployeeCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Name" class="control-label"></label>
                <input asp-for="Employee.Name" class="form-control" />
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Surname" class="control-label"></label>
                <input asp-for="Employee.Surname" class="form-control" />
                <span asp-validation-for="Employee.Surname" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Employee.Short" class="control-label"></label>
                <input asp-for="Employee.Short" class="form-control" />
                <span asp-validation-for="Employee.Short" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Employee.NameRus" class="control-label"></label>
                <input asp-for="Employee.NameRus" class="form-control" />
                <span asp-validation-for="Employee.NameRus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Position" class="control-label"></label>
                <select asp-for="Employee.Position" class="form-control" asp-items="ViewBag.Position"></select>
                <span asp-validation-for="Employee.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.StartDate" class="control-label"></label>
                <input type="date" asp-for="Employee.StartDate" class="form-control" />
                <span asp-validation-for="Employee.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.EndDate" class="control-label"></label>
                <input type="date" asp-for="Employee.EndDate" class="form-control" />
                <span asp-validation-for="Employee.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Company" class="control-label"></label>
                <input asp-for="Employee.Company" class="form-control" />
                <span asp-validation-for="Employee.Company" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-sm-3">
        <button type="button" id="btnQueryStringBack" class="btn btn-block">@Localizer["BACK"]</button><br /><br />
    </div>
</div>
@section Scripts {
    <script>
    </script>
}