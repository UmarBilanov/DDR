@page
@model DiamondDrillingReport.Pages.Employees.CreateModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<hr />
<div class="row">
    <div class="col-sm-9">
        <h4>@Localizer["EMPLOYEE"]</h4>
        <hr />
        <form method="post">
            <div class="form-row">
                <div class="form-group col-sm-3"></div>
                <div class="form-group col-sm-3">
                    <label asp-for="Employee.EmployeeCode"></label>
                </div>
                <div class="form-group col-sm-4">
                    <input asp-for="Employee.EmployeeCode" type="text" class="form-control">
                </div>
                <div class="form-group col-sm-2">
                    <span asp-validation-for="Employee.EmployeeCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-3"></div>
                <div class="form-group col-sm-3">
                    <label asp-for="Employee.Name"></label>
                </div>
                <div class="form-group col-sm-4">
                    <input asp-for="Employee.Name" type="text" class="form-control">
                </div>
                <div class="form-group col-sm-2">
                    <span asp-validation-for="Employee.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-3"></div>
                <div class="form-group col-sm-3">
                    <label asp-for="Employee.Surname"></label>
                </div>
                <div class="form-group col-sm-4">
                    <input asp-for="Employee.Surname" type="text" class="form-control">
                </div>
                <div class="form-group col-sm-2">
                    <span asp-validation-for="Employee.Surname" class="text-danger"></span>
                </div>
            </div>
            @*<div class="form-row">
                <div class="form-group col-sm-3"></div>
                <div class="form-group col-sm-3">
                    <label asp-for="Employee.Short"></label>
                </div>
                <div class="form-group col-sm-4">
                    <input asp-for="Employee.Short" type="text" class="form-control">
                </div>
                <div class="form-group col-sm-2">
                    <span asp-validation-for="Employee.Short" class="text-danger"></span>
                </div>
            </div>*@
            <div class="form-row">
                <div class="form-group col-sm-3"></div>
                <div class="form-group col-sm-3">
                    <label asp-for="Employee.NameRus"></label>
                </div>
                <div class="form-group col-sm-4">
                    <input asp-for="Employee.NameRus" type="text" class="form-control">
                </div>
                <div class="form-group col-sm-2">
                    <span asp-validation-for="Employee.NameRus" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-3"></div>
                <div class="form-group col-sm-3">
                    <label asp-for="Employee.Position"></label>
                </div>
                <div class="form-group col-sm-4">
                    <select asp-for="Employee.Position" class="form-control" asp-items="ViewBag.Position"></select>
                </div>
                <div class="form-group col-sm-2">
                    <span asp-validation-for="Employee.Position" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-3"></div>
                <div class="form-group col-sm-3">
                    <label asp-for="Employee.StartDate"></label>
                </div>
                <div class="form-group col-sm-4">
                    <input asp-for="Employee.StartDate" type="date" class="form-control">
                </div>
                <div class="form-group col-sm-2">
                    <span asp-validation-for="Employee.StartDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-3"></div>
                <div class="form-group col-sm-3">
                    <label asp-for="Employee.EndDate"></label>
                </div>
                <div class="form-group col-sm-4">
                    <input asp-for="Employee.EndDate" type="date" class="form-control">
                </div>
                <div class="form-group col-sm-2">
                    <span asp-validation-for="Employee.EndDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-3"></div>
                <div class="form-group col-sm-3">
                    <label asp-for="Employee.Company"></label>
                </div>
                <div class="form-group col-sm-4">
                    <input asp-for="Employee.Company" type="text" class="form-control">
                </div>
                <div class="form-group col-sm-2">
                    <span asp-validation-for="Employee.Company" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-3"></div>
                <div class="form-group col-sm-3"></div>
                <div class="form-group col-sm-4">
                    <input type="submit" value="@Localizer["CREATE"]" class="btn btn-block" />
                </div>
                <div class="form-group col-sm-2"></div>
            </div>
        </form>
    </div>
    <div class="col-sm-3">
        <button type="button" id="btnQueryStringBack" class="btn btn-block">@Localizer["BACK"]</button><br /><br />
    </div>
</div>
@section Scripts {
    <script>
    </script>
}
