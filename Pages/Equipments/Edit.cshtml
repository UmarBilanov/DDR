@page
@model DiamondDrillingReport.Pages.Equipments.EditModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<hr />
<div class="row">
    <div class="col-sm-9">      
        <h4>@Localizer["Equipment"]</h4>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Equipment.ID" />
            <div class="form-group">
                <label asp-for="Equipment.AssetCode" class="control-label"></label>
                <input asp-for="Equipment.AssetCode" class="form-control" />
                <span asp-validation-for="Equipment.AssetCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.WatertruckName" class="control-label"></label>
                <input asp-for="Equipment.WatertruckName" class="form-control" />
                <span asp-validation-for="Equipment.WatertruckName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.HullNumber" class="control-label"></label>
                <input asp-for="Equipment.HullNumber" class="form-control" />
                <span asp-validation-for="Equipment.HullNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-sm-3">
        <button type="button" id="btnQueryStringBack" class="btn btn-block">@Localizer["BACK"]</button><br /><br />
    </div>
</div>
@section Scripts {
    <script>
    </script>
}